<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewpostcard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logoIngenieria"
            android:background="@color/Gray"
            />
        <TextView
            android:id="@+id/textviewpostcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de la Publicacion"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/textviewDescriptionpostcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion de la publicacion"
            android:layout_margin="10dp"
            android:textColor="@color/cardview_dark_background">

        </TextView>




    </LinearLayout>

</androidx.cardview.widget.CardView>